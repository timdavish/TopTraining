
<!-- Registration template -->

<!-- Header -->
<div class="page-header">
    <h2>Register</h1>
</div>

<!-- Error pop-up -->
<div ng-show="vm.error" class="alert alert-danger row">
    <span>{{ vm.error.message }}</span>
</div>

<!-- Registration form -->
<form ng-submit="vm.register()"
    style="margin-top: 30px;">

    <div class="form-group">
        <input type="text" class="form-control" placeholder="Username"
            ng-model="vm.user.username" />
    </div>
    <div class="form-group">
        <input type="password" class="form-control" placeholder="Password"
            ng-model="vm.user.password" />
    </div>
    <div class="form-group">
        <input type="radio" name="usertype" value="student" ng-model="vm.user.usertype" checked="checked" /> I need a trainer </br>
        <input type="radio" name="usertype" value="trainer" ng-model="vm.user.usertype" /> I am a trainer
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
