
<!-- Event list template -->

<!-- All Events -->
<div class="content-section-a">
    <div class="container">
        <div class="row">

            <h2>Trainers near {{ vm.location }}</h2>

            <div ng-repeat="trainer in vm.trainers">
                <span>{{ trainer.contact.firstname }} {{ trainer.contact.lastname[0] }}.</span>
                <br />
                <span>{{ vm.sport }}</span>
                <br />
                <span><a href="#/trainers/{{ trainer._id }}">View Profile</a></span>
            </div>

        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</div>
<!-- /All Events.content-section-a -->
