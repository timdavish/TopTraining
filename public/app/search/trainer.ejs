
<!-- Event detail template -->

<!-- Event detail -->
<div class="content-section-b">
    <div class="container">
        <div class="row">

            <!-- Back -->
            <a href="/#/search">Back</a>
            <!-- /Back -->

            <!-- Error pop-up -->
            <div ng-show="vm.error" class="alert alert-danger row">
                <span>{{ vm.error.message }}</span>
            </div>

            <!-- Trainer details -->
            <h2>{{ vm.trainer.contact.firstname }} {{ vm.trainer.contact.lastname }}</h2>

            <span>{{ vm.sport }}</span><br />

            <h2>Training Locations</h2>
            <div ng-repeat="location in vm.trainer.trainerInfo.locations">
                <span>{{ location }}</span>
            </div>

            <h2>Packages</h2>
            <div ng-repeat="package in vm.trainer.trainerInfo.packages">
                <span>{{ package }}</span>
            </div>

            <h2>Reviews</h2>
            <div ng-repeat="review in vm.trainer.trainerInfo.reviews">
                <span>{{ review }}</span>
            </div>
            <!-- /Trainer details -->

        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</div>
<!-- /.content-section-b -->
